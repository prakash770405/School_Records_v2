<!DOCTYPE html>
<html lang="en">
<%- include('../includes/header') %>

<body class="bg-light">
  <%- include('../includes/navbar') %>
  <%- include("../includes/flash") %>
  <!-- Full width login section -->
  <div class="container-fluid px-3 px-md-5 py-4 ">

    <!-- Title -->
    <div class="text-center mb-4">
      <h2 class="fw-semibold text-success mb-1">
        <i class="fa-solid fa-user-secret me-1"></i> Admin Login
      </h2>
      <p class="text-muted small fst-italic mb-0">
        Sign in to manage School Records
      </p>
    </div>

  

    <!-- Form (FULL WIDTH) -->
    <form
      action="/admin/login"
      method="post"
      class="mx-auto"
      style="max-width: 720px;"
    >

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label fw-medium">
          <i class="fa-solid fa-envelope me-1 text-success"></i> Email
        </label>
        <input
          type="email"
          class="form-control shadow-none"
          id="email"
          name="email"
          placeholder="admin@example.com"
          required
        >
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label for="password" class="form-label fw-medium">
          <i class="fa-solid fa-key me-1 text-success"></i> Password
        </label>
        <input
          type="password"
          class="form-control shadow-none"
          id="password"
          name="password"
          placeholder="••••••••"
          required
        >
      </div>

      <!-- Actions -->
      <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-success px-4">
          Login
        </button>

        <a
          href="/admin/signup"
          class="text-decoration-none small fw-medium text-primary"
        >
          Create new account?
        </a>
      </div>

    </form>
  </div>

  <%- include('../includes/footer') %>

  <script>
    setTimeout(() => {
      const alert = document.getElementById('loginError');
      if (alert) {
        alert.classList.remove('show');
        alert.classList.add('hide');
        setTimeout(() => alert.remove(), 300);
      }
    }, 3000);
  </script>

</body>
</html>
