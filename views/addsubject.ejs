<!DOCTYPE html>
<html lang="en">
<%- include('../includes/header') %>

<body class="bg-light">
  <%- include('../includes/navbar') %>

  <div class="container my-4">

    <!-- Page Header -->
    <div class="mb-4">
      <h2 class="h3 fw-semibold text-success mb-1">
        <i class="fa-solid fa-book-open-reader me-1"></i> Add Subjects
      </h2>
      <p class="text-muted fst-italic mb-0">
        Select subjects applicable for the selected class
      </p>
    </div>

    <form action="/subjects/add" method="post">

      <!-- Subjects -->
      <div class="mb-4">

        <div class="d-flex justify-content-between align-items-center mb-2">
          <label class="form-label fw-semibold text-success mb-0">
            <i class="fa-solid fa-list-check me-1"></i> Select Subjects
          </label>

          <!-- Select / Deselect -->
          <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-success" id="selectAll">
              Select All
            </button>
            <button type="button" class="btn btn-outline-secondary" id="deselectAll">
              Deselect All
            </button>
          </div>
        </div>

        <!-- Default subjects -->
        <div class="row">

          <% const subjects = ['Hindi','English','Maths','Science','History']; %>
          <% subjects.forEach(sub => { %>
            <div class="col-md-4 col-sm-6 mb-2">
              <div class="form-check">
                <input
                  class="form-check-input subject-checkbox"
                  type="checkbox"
                  name="subjects[]"
                  value="<%= sub %>"
                  checked
                >
                <label class="form-check-label fw-medium">
                  <%= sub %>
                </label>
              </div>
            </div>
          <% }) %>

        </div>

        <!-- Additional Subject -->
        <div class="mt-3">
          <label class="form-label fw-medium text-success">
            <i class="fa-solid fa-plus me-1"></i> Additional Subject (optional)
          </label>
          <input
            type="text"
            class="form-control shadow-none border-success-subtle"
            name="subjects[]"
            placeholder="e.g. Geography"
          >
        </div>

      </div>

      <!-- Class Dropdown -->
      <div class="mb-4">
        <label for="Class" class="form-label fw-semibold text-success">
          <i class="fa-solid fa-school me-1"></i> Choose Class
        </label>

        <select
          class="form-select shadow-none border-success-subtle"
          name="Class"
          id="Class"
          required
        >
          <option value="">-- Select Class --</option>
          <% for (let i = 1; i <= 12; i++) { %>
            <option value="<%= i %>">Class <%= i %></option>
          <% } %>
        </select>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-success px-4">
        <i class="fa-solid fa-circle-check me-1"></i> Add Subjects
      </button>

    </form>
  </div>

  <!-- Select / Deselect Script (NO logic change) -->
  <script>
    document.getElementById("selectAll").addEventListener("click", () => {
      document.querySelectorAll(".subject-checkbox").forEach(cb => cb.checked = true);
    });

    document.getElementById("deselectAll").addEventListener("click", () => {
      document.querySelectorAll(".subject-checkbox").forEach(cb => cb.checked = false);
    });
  </script>

  <%- include('../includes/footer') %>
</body>
</html>
